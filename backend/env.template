PORT=5000

# Mock Authentication (for development)
# Set to 'true' to enable mock authentication tokens
# Set to 'false' to use real Firebase authentication
MOCK_AUTH_ENABLED=true

# Firebase Service Account Configuration
# Replace this with your actual Firebase service account JSON (as a single line)
# You can get this from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_CONFIG={"type":"service_account","project_id":"your-project-id","private_key_id":"your-private-key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com","client_id":"your-client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com"}

# Google Gemini API Key
# Get this from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here 